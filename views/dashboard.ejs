<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Panel de Control</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="<%= darkMode ? 'dark' : '' %>">

  <button id="darkToggle" class="dark-btn">ðŸŒ“</button>

  <header class="dashboard-header">
    <div class="menu-toggle" id="menuToggle">â˜°</div>
    <h1>Hola, <%= currentUser %></h1>
  </header>

  <nav id="sideMenu" class="side-menu">
    <ul>
      <li><a href="/change-password">Cambiar contraseÃ±a</a></li>
      <li><a href="/logout">Cerrar sesiÃ³n</a></li>
      <li>
        <form action="/delete-account" method="POST" onsubmit="return confirm('Â¿Eliminar cuenta definitivamente?')">
          <button type="submit" class="btn-danger">Eliminar cuenta</button>
        </form>
      </li>
    </ul>
  </nav>

  <main class="dashboard-content">
    <section class="generate-section">
      <form method="POST" action="/generate">
        <input type="text" name="originalUrl" placeholder="Introduce URL para generar QR" required />
        <button type="submit" class="btn-primary">Generar QR</button>
      </form>
    </section>

    <section class="qr-list">
      <% if (qrs.length === 0) { %>
        <p class="no-qr">AÃºn no has generado ningÃºn QR</p>
      <% } %>

      <% qrs.forEach(qr => { %>
        <div class="qr-card">
          <img src="<%= qr.qrDataUrl %>" alt="QR Code" />
          <p><strong>Redirige a:</strong> <%= qr.originalUrl %></p>
          <p><strong>URL acortada:</strong> <a href="<%= qr.shortInternalUrl %>" target="_blank"><%= qr.shortInternalUrl %></a></p>
          <p><strong>Escaneos:</strong> <%= qr.scans %> | <strong>Ãšltimo:</strong> <%= qr.lastScan ? new Date(qr.lastScan).toLocaleString("es-VE",{timeZone:"America/Caracas"}) : 'Nunca' %></p>

          <form method="POST" action="/update/<%= qr.id %>">
            <input type="text" name="originalUrl" placeholder="Nueva URL" />
            <button type="submit" class="btn-primary">Actualizar</button>
          </form>

          <form method="POST" action="/delete/<%= qr.id %>" onsubmit="return confirm('Â¿Eliminar este QR?')">
            <button type="submit" class="btn-danger">Eliminar QR</button>
          </form>
        </div>
      <% }) %>
    </section>
  </main>

  <script>
    document.getElementById("menuToggle").addEventListener("click", () => {
      document.getElementById("sideMenu").classList.toggle("active");
    });
  </script>

</body>
</html>
