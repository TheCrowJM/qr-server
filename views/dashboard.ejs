<!DOCTYPE html>
<html lang="es" class="<%= darkMode ? 'dark-mode' : '' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - QR Manager</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- HEADER -->
  <div class="container">
    <div class="card">
      <div class="header">
        <div class="brand">QR Manager</div>
        <div class="controls">
          <!-- Menu hamburguesa -->
          <div class="dropdown">
            <button class="btn small">â˜° Menu</button>
            <div class="dropdown-content" style="display:none; position:absolute; right:0; top:40px; background:var(--card); border-radius:var(--radius); box-shadow:var(--shadow); padding:10px; min-width:180px; z-index:999;">
              <form action="/change-password" method="get">
                <button type="submit" class="btn small" style="width:100%;">Cambiar contraseÃ±a</button>
              </form>
              <form action="/logout" method="get">
                <button type="submit" class="btn small" style="width:100%;">Cerrar sesiÃ³n</button>
              </form>
              <form action="/delete-account" method="post" onsubmit="return confirm('Â¿EstÃ¡s seguro de eliminar tu cuenta?');">
                <button type="submit" class="btn danger small" style="width:100%;">Eliminar cuenta</button>
              </form>
            </div>
          </div>
          <!-- Dark mode -->
          <form action="/toggle-darkmode" method="post" style="margin-left:10px;">
            <button type="submit" class="btn small">ðŸŒ™</button>
          </form>
        </div>
      </div>

      <!-- Crear nuevo QR -->
      <form action="/generate" method="post" class="create-qr">
        <input type="url" name="originalUrl" placeholder="Ingresa URL a convertir en QR" required>
        <button type="submit" class="btn">Crear QR</button>
      </form>

      <!-- Grid de QRs -->
      <div class="qr-grid">
        <% if (qrs.length === 0) { %>
          <p class="note">No tienes QR creados aÃºn.</p>
        <% } else { %>
          <% qrs.forEach(qr => { %>
            <div class="qr-card">
              <div class="qr-preview">
                <img src="<%= qr.qrDataUrl %>" alt="QR">
              </div>
              <div class="qr-data">
                <p><strong>Redirige a:</strong> <a href="<%= qr.originalUrl %>" target="_blank"><%= qr.originalUrl %></a></p>
                <p><strong>URL acortada (fija):</strong> <a href="<%= qr.shortInternalUrl %>" target="_blank"><%= qr.shortInternalUrl %></a></p>
                <p><strong>Escaneos:</strong> <%= qr.scans %> &nbsp; <strong>Ãšltimo:</strong> <%= qr.lastScan ? qr.lastScan.toLocaleString() : 'Nunca' %></p>
                
                <form action="/update/<%= qr.id %>" method="post" class="inline-update">
                  <input type="url" name="originalUrl" placeholder="Nueva URL" required>
                  <button type="submit" class="btn small">Actualizar</button>
                </form>
                
                <form action="/delete/<%= qr.id %>" method="post" style="margin-top:6px;" onsubmit="return confirm('Â¿Eliminar este QR?');">
                  <button type="submit" class="btn danger small">Eliminar QR</button>
                </form>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    // Dropdown menu
    document.querySelectorAll('.dropdown').forEach(drop => {
      const btn = drop.querySelector('button');
      const menu = drop.querySelector('.dropdown-content');
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
      });
    });

    // Cerrar dropdown al hacer click afuera
    window.addEventListener('click', (e) => {
      document.querySelectorAll('.dropdown-content').forEach(menu => {
        if (!menu.parentElement.contains(e.target)) {
          menu.style.display = 'none';
        }
      });
    });
  </script>
</body>
</html>
