<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Dashboard - QR Manager Pro</title>
  <link rel="stylesheet" href="/css/style.css" />
  <script defer src="/js/dark-mode.js"></script>
</head>
<body class="<%= darkMode ? 'dark-mode' : '' %>">

  <!-- Side panel (hamburger) -->
  <div id="sidePanel" class="side-panel" aria-hidden="true">
    <button class="close" id="sideClose">&times;</button>
    <h3 style="margin:6px 0 12px;">Menú</h3>
    <div style="display:flex; flex-direction:column; gap:8px;">
      <form action="/toggle-darkmode" method="POST">
        <button class="btn ghost" type="submit"><%= darkMode ? 'Light Mode' : 'Dark Mode' %></button>
      </form>
      <a class="btn ghost" href="/change-password">Cambiar contraseña</a>
      <form action="/logout" method="GET">
        <button class="btn" type="submit">Cerrar sesión</button>
      </form>
      <form action="/delete-account" method="POST" onsubmit="return confirm('¿Eliminar cuenta y todos sus QRs?');">
        <button class="btn danger" type="submit">Eliminar cuenta</button>
      </form>
    </div>
    <div style="margin-top:auto; font-size:0.85rem; color:var(--muted)">Usuario: <strong><%= currentUser %></strong></div>
  </div>

  <div style="max-width:1100px; margin:18px auto; padding:12px;">
    <div class="card" style="padding:16px;">
      <div class="dashboard-top">
        <div class="dashboard-left">
          <button id="hambBtn" class="hamburger" aria-label="Abrir menú">
            <span class="bars"></span>
          </button>
          <div style="font-weight:700; font-size:1.05rem; color:var(--accent-dark)">QR Manager Pro</div>
          <div class="user-pill">Usuario: <strong><%= currentUser %></strong></div>
        </div>

        <div class="dashboard-actions">
          <!-- On desktop these act as quick controls; on mobile main actions move to hamburger -->
          <form action="/toggle-darkmode" method="POST" style="display:inline;">
            <button class="btn small"><%= darkMode ? 'Light Mode' : 'Dark Mode' %></button>
          </form>

          <a href="/change-password" class="btn small ghost">Cambiar contraseña</a>

          <form action="/logout" method="GET" style="display:inline;">
            <button class="btn small" type="submit" style="background:var(--accent-dark)">Cerrar sesión</button>
          </form>

          <form action="/delete-account" method="POST" style="display:inline;" onsubmit="return confirm('¿Eliminar cuenta y todos sus QRs?');">
            <button class="btn small danger" type="submit">Eliminar cuenta</button>
          </form>
        </div>
      </div>

      <!-- Crear QR -->
      <form action="/generate" method="POST" class="create-qr" style="margin-top:12px;">
        <input name="originalUrl" placeholder="www.ejemplo.com (no hace falta escribir https://)" type="text" />
        <button class="btn" type="submit">Crear QR</button>
      </form>

      <div class="note">Pega la URL real; si no incluye http/https se añadirá automáticamente.</div>

      <!-- Grid -->
      <div class="qr-grid" aria-live="polite" style="margin-top:18px;">
        <% if (!qrs || qrs.length === 0) { %>
          <div style="grid-column:1/-1; text-align:center;" class="note">No hay QRs generados.</div>
        <% } %>

        <% qrs.forEach(q => { %>
          <div class="qr-card" role="article">
            <div class="qr-left">
              <img src="<%= q.qrDataUrl %>" alt="QR" />
            </div>

            <div class="qr-data">
              <p><strong>Redirige a:</strong> <a href="<%= q.originalUrl %>" target="_blank" rel="noopener"><%= q.originalUrl %></a></p>
              <p><strong>URL acortada (fija):</strong> <a href="<%= q.shortInternalUrl %>" target="_blank" rel="noopener"><%= q.shortInternalUrl %></a></p>
              <p>
                <strong>Escaneos:</strong> <%= q.scans %>
                &nbsp; <strong>Último:</strong>
                <span class="scan-date" data-ts="<%= q.lastScan ? q.lastScan.toISOString() : '' %>"><%= q.lastScan ? q.lastScan : 'Nunca' %></span>
              </p>

              <form action="/update/<%= q.id %>" method="POST" class="inline-update" onsubmit="return confirm('Confirmar actualización de URL para este QR?');">
                <input name="originalUrl" placeholder="Nueva URL (no cambiará el QR)" />
                <button class="btn" type="submit">Actualizar</button>
              </form>

              <div class="qr-actions">
                <form action="/delete/<%= q.id %>" method="POST" onsubmit="return confirm('Eliminar este QR?');">
                  <button type="submit" class="btn danger">Eliminar QR</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

    </div>
  </div>

  <script>
    // side-panel toggle
    (function(){
      const side = document.getElementById('sidePanel');
      const btn = document.getElementById('hambBtn');
      const close = document.getElementById('sideClose');

      if (btn && side) {
        btn.addEventListener('click', () => {
          side.classList.add('open');
          side.setAttribute('aria-hidden','false');
        });
      }
      if (close && side) {
        close.addEventListener('click', () => {
          side.classList.remove('open');
          side.setAttribute('aria-hidden','true');
        });
      }
      // close clicking outside
      document.addEventListener('click', (e) => {
        if (!side.contains(e.target) && !btn.contains(e.target)) {
          side.classList.remove('open');
        }
      });

      // Format scan dates to d/m/a GMT-4
      document.querySelectorAll('.scan-date').forEach(el => {
        const ts = el.dataset.ts;
        if (!ts) { el.textContent = 'Nunca'; return; }
        try {
          const d = new Date(ts);
          // Convert to GMT-4 by subtracting 4 hours from UTC time
          const adjusted = new Date(d.getTime() - (4 * 60 * 60 * 1000));
          const day = String(adjusted.getUTCDate()).padStart(2,'0');
          const month = String(adjusted.getUTCMonth()+1).padStart(2,'0');
          const year = adjusted.getUTCFullYear();
          const hours = String(adjusted.getUTCHours()).padStart(2,'0');
          const mins = String(adjusted.getUTCMinutes()).padStart(2,'0');
          el.textContent = `${day}/${month}/${year} ${hours}:${mins} (GMT-4)`;
        } catch(e) {
          el.textContent = 'Nunca';
        }
      });
    })();
  </script>
</body>
</html>
