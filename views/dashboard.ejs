<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Dashboard - QR Manager Pro</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="<%= darkMode ? 'dark-mode' : '' %>">
  <div class="page-wrap">
    <div class="card dashboard-card">
      <div class="dashboard-top">
        <div class="dashboard-info">
          <div style="font-weight:700; font-size:1.15rem; color:var(--accent-dark)">QR Manager Pro</div>
          <div style="color:var(--muted)">Usuario: <strong><%= currentUser %></strong></div>
        </div>

        <div class="dashboard-actions">
          <!-- hamburger -->
          <div id="hamb" class="hamburger <%= darkMode ? 'dark' : '' %>" aria-hidden="true">
            <span></span><span></span><span></span>
          </div>
          <!-- always-visible dark-mode toggle (keeps accessible) -->
          <form action="/toggle-darkmode" method="POST" style="display:inline;">
            <button class="btn small"><%= darkMode ? 'Light Mode' : 'Dark Mode' %></button>
          </form>
        </div>
      </div>

      <!-- CREATE -->
      <form action="/generate" method="POST" class="create-qr">
        <input name="originalUrl" placeholder="www.ejemplo.com (no hace falta escribir https://)" type="text" />
        <button class="btn" type="submit">Crear QR</button>
      </form>

      <div class="note">Pega la URL real; si no incluye http/https se añadirá automáticamente.</div>

      <!-- QR GRID -->
      <div class="qr-grid" aria-live="polite" style="margin-top:14px;">
        <% function fmtDate(d) {
             if(!d) return 'Nunca';
             try {
               const dt = new Date(d);
               return dt.toLocaleString('es-ES', { timeZone: 'America/Santo_Domingo', day:'2-digit', month:'2-digit', year:'numeric', hour:'2-digit', minute:'2-digit' });
             } catch(e) { return new Date(d).toISOString(); }
           }
        %>

        <% if (!qrs || qrs.length === 0) { %>
          <div style="grid-column:1/-1; text-align:center;" class="note">No hay QRs generados.</div>
        <% } %>

        <% qrs.forEach(q => { %>
          <div class="qr-card" role="article" aria-label="QR card">
            <div class="qr-preview">
              <img src="<%= q.qrDataUrl %>" alt="QR" />
            </div>

            <div class="qr-data">
              <p><strong>Redirige a:</strong> <a href="<%= q.originalUrl %>" target="_blank" rel="noopener" style="color:var(--accent)"><%= q.originalUrl %></a></p>
              <p><strong>URL acortada (fija):</strong> <a href="<%= q.shortInternalUrl %>" target="_blank" rel="noopener" style="color:var(--accent)"><%= q.shortInternalUrl %></a></p>
              <p><strong>Escaneos:</strong> <%= q.scans %> &nbsp; <strong>Último:</strong> <%= q.lastScan ? fmtDate(q.lastScan) : 'Nunca' %></p>

              <form action="/update/<%= q.id %>" method="POST" class="inline-update" onsubmit="return confirm('Confirmar actualización de URL para este QR?');">
                <input name="originalUrl" placeholder="Nueva URL (no cambiará el QR)" />
                <button class="btn" type="submit">Actualizar</button>
              </form>

              <div class="qr-actions" style="justify-content:flex-start;">
                <form action="/delete/<%= q.id %>" method="POST" onsubmit="return confirm('Eliminar este QR?');">
                  <button type="submit" class="btn danger">Eliminar QR</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

    </div>
  </div>

  <!-- Side menu (hamburger) -->
  <div id="sideOverlay" class="side-overlay" aria-hidden="true"></div>
  <nav id="sideMenu" class="side-menu" aria-hidden="true">
    <div class="sm-title">Acciones</div>
    <form action="/change-password" method="GET" style="margin:0;">
      <button class="sm-link" type="submit">Cambiar contraseña</button>
    </form>
    <form action="/logout" method="GET" style="margin:0;">
      <button class="sm-link" type="submit">Cerrar sesión</button>
    </form>
    <form action="/delete-account" method="POST" style="margin:0;" onsubmit="return confirm('¿Eliminar cuenta y todos sus QRs?');">
      <button class="sm-link" type="submit" style="color:var(--danger); border-color: rgba(255,77,79,0.06)">Eliminar cuenta</button>
    </form>

    <div style="margin-top:auto; font-size:0.85rem; color:var(--muted)">Perfil: <strong><%= currentUser %></strong></div>
  </nav>

  <script>
    // simple hamburger side menu (only affects dashboard)
    (function(){
      const hamb = document.getElementById('hamb');
      const side = document.getElementById('sideMenu');
      const overlay = document.getElementById('sideOverlay');
      function open(){ side.classList.add('open'); overlay.classList.add('show'); side.setAttribute('aria-hidden','false'); overlay.setAttribute('aria-hidden','false'); }
      function close(){ side.classList.remove('open'); overlay.classList.remove('show'); side.setAttribute('aria-hidden','true'); overlay.setAttribute('aria-hidden','true'); }
      if(hamb && side && overlay){
        hamb.addEventListener('click', () => { if(side.classList.contains('open')) close(); else open(); });
        overlay.addEventListener('click', close);
        // close on escape
        document.addEventListener('keydown', e => { if(e.key === 'Escape') close(); });
      }
    })();
  </script>
</body>
</html>
