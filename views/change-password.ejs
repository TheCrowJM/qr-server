<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Cambiar contraseña - QR Manager Pro</title>
  <link rel="stylesheet" href="/css/style.css" />
  <script defer src="/js/dark-mode.js"></script>
</head>
<body class="<%= darkMode ? 'dark-mode' : '' %>">
  <div class="container">
    <div class="card">
      <div class="header">
        <div class="brand">QR Manager Pro</div>
        <div class="controls">
          <button class="btn small" data-toggle-dark><%= darkMode ? 'Light Mode' : 'Dark Mode' %></button>
          <a href="/dashboard" class="btn small ghost">Volver a inicio</a>
        </div>
      </div>

      <h1>Cambiar contraseña</h1>
      <% if (typeof error !== 'undefined' && error) { %>
        <p style="color:var(--danger)"><%= error %></p>
      <% } %>

      <form method="POST" action="/change-password">
        <label>Contraseña anterior</label>
        <input name="currentPassword" type="password" required />
        <label>Nueva contraseña</label>
        <input name="newPassword" type="password" required />
        <div style="display:flex; gap:8px; margin-top:12px; flex-wrap:wrap;">
          <button class="btn" type="submit">Aplicar contraseña</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // small safety: check newPassword length at least 6 (optionally)
    const chForm = document.querySelector('form[action="/change-password"]');
    if (chForm) {
      chForm.addEventListener('submit', (e) => {
        const n = chForm.querySelector('input[name="newPassword"]').value;
        if (n.length < 4) {
          e.preventDefault();
          alert('La nueva contraseña debe tener al menos 4 caracteres');
        }
      });
    }
  </script>
</body>
</html>
