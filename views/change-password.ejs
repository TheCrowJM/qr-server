<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Cambiar contraseña - QR Manager Pro</title>
  <link rel="stylesheet" href="/css/style.css" />
  <script defer src="/js/dark-mode.js"></script>
</head>
<body class="<%= darkMode ? 'dark-mode' : '' %>">
  <div class="floating-wrap">
    <div class="card">
      <div class="header">
        <div class="brand">QR Manager Pro</div>
        <div class="controls" style="margin-left:auto;">
          <form action="/toggle-darkmode" method="POST" style="margin:0;">
            <button class="btn small" type="submit"><%= darkMode ? 'Light Mode' : 'Dark Mode' %></button>
          </form>
        </div>
      </div>

      <h1>Cambiar contraseña</h1>
      <% if (typeof error !== 'undefined' && error) { %>
        <p style="color:var(--danger)"><%= error %></p>
      <% } %>
      <% if (typeof success !== 'undefined' && success) { %>
        <p style="color:green"><%= success %></p>
      <% } %>

      <form method="POST" action="/change-password" style="margin-top:8px;">
        <label>Contraseña anterior</label>
        <input name="currentPassword" type="password" required />
        <label>Nueva contraseña</label>
        <input name="newPassword" type="password" required />
        <label>Confirmar nueva contraseña</label>
        <input name="confirmPassword" type="password" required />
        <div style="display:flex; gap:8px; margin-top:12px; align-items:center; flex-wrap:wrap;">
          <button class="btn" type="submit">Aplicar contraseña</button>
          <a href="/dashboard" class="link" style="margin-left:auto">Volver</a>
        </div>
      </form>
    </div>
  </div>

  <script>
    const form = document.querySelector('form[action="/change-password"]');
    if (form) {
      form.addEventListener('submit', (e) => {
        const n = form.querySelector('input[name="newPassword"]').value;
        const c = form.querySelector('input[name="confirmPassword"]').value;
        if (n !== c) {
          e.preventDefault();
          alert('La nueva contraseña y la confirmación no coinciden');
        }
      });
    }
  </script>
</body>
</html>
